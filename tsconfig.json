{
    "compilerOptions": {
      "target": "ES2022",
      "module": "commonjs",
      "lib": ["es6"],
      "allowJs": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "removeComments": true,
      "typeRoots": ["./node_modules/@types", "./src/@types"],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@models/*": ["./src/models/*"],
        "@config/*": ["./src/config/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  